<Window x:Class="LanguageAssessmentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="早期语言评估与训练系统" Height="400" Width="1080"  
        WindowState="Maximized"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="/WpfApp2;component/image/background.jpg" Stretch="Fill"/>
        <Viewbox Stretch="Uniform" MaxWidth="600" MaxHeight="400">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
                <Border Background="#CCFFFFFF" CornerRadius="20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="早期语言评估与训练系统"
                   FontSize="50"
                   FontFamily="Microsoft YaHei"
                   Foreground="#FFD98B00"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Effect="{StaticResource TextShadowEffect}"/>
                        <TextBlock Text="用户登录" FontSize="24" Foreground="#FF1A73E8" HorizontalAlignment="Center" Background="#FFB3E5FC" Height="40" Margin="0,0,0,20"/>

                        <!-- 用户名行 - 单独的Grid -->
                        <Grid Margin="0,0,0,20" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <Viewbox Grid.Column="0" Stretch="Uniform" VerticalAlignment="Center">
                                <Grid Width="16" Height="16">
                                    <Path Data="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" Fill="#FFA9B46D"/>
                                    <Path Data="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" Fill="#FFA9B46D"/>
                                </Grid>
                            </Viewbox>
                            <TextBox x:Name="UsernameTextBox" Grid.Column="1" Width="200" Height="50" FontSize="30" Margin="10,0,0,0" Background="#FF1A73E8" Foreground="White" BorderThickness="0" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- 密码行 - 单独的Grid -->
                        <Grid Margin="0,0,0,20" Width="300">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <Viewbox Grid.Column="0" Stretch="Uniform" VerticalAlignment="Center">
                                <Grid Width="16" Height="16">
                                    <Path Data="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.8 11.8 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7 7 0 0 0 1.048-.625 11.8 11.8 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.54 1.54 0 0 0-1.044-1.263 63 63 0 0 0-2.887-.87C9.843.266 8.69 0 8 0m0 5a1.5 1.5 0 0 1 .5 2.915l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99A1.5 1.5 0 0 1 8 5" Fill="#FFA9B46D"/>
                                </Grid>
                            </Viewbox>
                            <PasswordBox x:Name="PasswordBox" Grid.Column="1" Width="200" Height="50"  FontSize="30" Margin="10,0,0,0" Background="#FF1A73E8" Foreground="White" BorderThickness="0" VerticalAlignment="Center"/>
                        </Grid>

                        <Button Content="登录" Background="#FFD98B00" Foreground="White" Height="40" Width="100" Click="LoginButton_Click" BorderThickness="0" HorizontalAlignment="Center">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Window>