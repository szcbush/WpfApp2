<Window x:Class="LanguageAssessmentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="早期语言评估与训练系统" Height="800" Width="1200"  
        WindowState="Maximized">

    <Window.Resources>
        <!-- 阴影效果 -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="20" ShadowDepth="3" Opacity="0.3"/>
    </Window.Resources>

    <Grid>
        <!-- 背景 -->
        <Image Source="/WpfApp2;component/image/background.jpg" Stretch="UniformToFill"/>

        <!-- 主框架 -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" 
               Background="Transparent"/>
    </Grid>
</Window>