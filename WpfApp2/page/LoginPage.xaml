<Page x:Class="WpfApp2.page.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="用户登录">

    <Grid>
        <!-- 半透明背景层 -->
        <Rectangle Fill="#CC000000" Opacity="0.3"/>

        <!-- 登录框容器 -->
        <Viewbox Stretch="Uniform" MaxWidth="600" MaxHeight="500">
            <Grid Width="500" Height="400">
                <Border Background="#CCFFFFFF" CornerRadius="20" Padding="30" 
                        Effect="{StaticResource ShadowEffect}">
                    <StackPanel>
                        <!-- 标题 -->
                        <TextBlock Text="早期语言评估与训练系统"
                                   FontSize="28" FontFamily="Microsoft YaHei" 
                                   Foreground="#FFD98B00" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <Border HorizontalAlignment="Center" Background="#FFB3E5FC" CornerRadius="10" Height="35" Margin="0,0,0,30" Padding="20,5">
                            <TextBlock Text="用户登录" FontSize="20" Foreground="#FF1A73E8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- 用户名输入 -->
                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 用户图标 -->
                            <Viewbox Grid.Column="0" Width="30" Height="30" 
                                     VerticalAlignment="Center" Margin="0,0,15,0">
                                <Grid>
                                    <Path Data="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" Fill="#FF1A73E8"/>
                                    <Path Data="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm12 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1v-1c0-1-1-4-6-4s-6 3-6 4v1a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" Fill="#FF1A73E8"/>
                                </Grid>
                            </Viewbox>

                            <TextBox x:Name="UsernameTextBox" Grid.Column="1" 
                                     Height="45" FontSize="18" 
                                     Background="#FFF0F0F0" Foreground="#333333" 
                                     BorderThickness="1" BorderBrush="#FF1A73E8"
                                     VerticalContentAlignment="Center" Padding="15,0"
                                     Text="admin"/>
                        </Grid>

                        <!-- 密码输入 -->
                        <Grid Margin="0,0,0,35">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 密码图标 -->
                            <Viewbox Grid.Column="0" Width="30" Height="30" 
                                     VerticalAlignment="Center" Margin="0,0,15,0">
                                <Grid>
                                    <Path Data="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.8 11.8 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7 7 0 0 0 1.048-.625 11.8 11.8 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.54 1.54 0 0 0-1.044-1.263 63 63 0 0 0-2.887-.87C9.843.266 8.69 0 8 0m0 5a1.5 1.5 0 0 1 .5 2.915l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99A1.5 1.5 0 0 1 8 5" 
                                          Fill="#FF1A73E8"/>
                                </Grid>
                            </Viewbox>

                            <PasswordBox x:Name="PasswordBox" Grid.Column="1" 
                                         Height="45" FontSize="18" 
                                         Background="#FFF0F0F0" Foreground="#333333" 
                                         BorderThickness="1" BorderBrush="#FF1A73E8"
                                         VerticalContentAlignment="Center" Padding="15,0"/>
                        </Grid>

                        <!-- 登录按钮 -->
                        <Button Content="登录" Height="50" FontSize="18" FontWeight="Bold"
                                Background="#FFD98B00" Foreground="White" 
                                BorderThickness="0" Style="{StaticResource LoginButtonStyle}"
                                Click="LoginButton_Click" Cursor="Hand">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="2"/>
                            </Button.Effect>
                        </Button>

                        <!-- 错误提示 -->
                        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" 
                                   FontSize="14" HorizontalAlignment="Center" 
                                   Margin="0,15,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</Page>