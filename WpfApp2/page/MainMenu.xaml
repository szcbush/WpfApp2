<Page x:Class="WpfApp2.page.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="早期语言评估与训练系统" 
      Background="#FFF5F5F5">

    <Page.Resources>
        <!-- 图片按钮样式 -->
        <Style x:Key="ImageButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F8FF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 按钮标题样式 -->
        <Style x:Key="ButtonTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF1A73E8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- 按钮描述样式 -->
        <Style x:Key="ButtonDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MaxWidth" Value="150"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- 背景 -->
        <Image Source="/WpfApp2;component/image/background.jpg" Stretch="UniformToFill" Opacity="0.3"/>

        <!-- 主内容 -->
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,50">
                <TextBlock Text="早期语言评估与训练系统"
                           FontSize="36"
                           FontFamily="Microsoft YaHei"
                           FontWeight="Bold"
                           Foreground="#FF1A73E8"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="请选择功能模块"
                           FontSize="18"
                           Foreground="#FF666666"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>

            <!-- 按钮网格 -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行：语言知识和发展评估 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="20">
                    <Button x:Name="LanguageKnowledgeBtn" 
                            Style="{StaticResource ImageButtonStyle}"
                            Click="NavigateToPage">
                        <StackPanel>
                            <Image Source="/WpfApp2;component/image/konwlege.jpg" 
                                   Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="语言发展知识" Style="{StaticResource ButtonTitleStyle}"/>
                            <TextBlock Text="了解儿童语言发展规律" Style="{StaticResource ButtonDescriptionStyle}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Margin="20">
                    <Button x:Name="DevelopmentAssessmentBtn" 
                            Style="{StaticResource ImageButtonStyle}"
                            Click="NavigateToPage">
                        <StackPanel>
                            <Image Source="/WpfApp2;component/image/assessment_icon.png" 
                                   Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="发展水平评估" Style="{StaticResource ButtonTitleStyle}"/>
                            <TextBlock Text="评估儿童语言发展水平" Style="{StaticResource ButtonDescriptionStyle}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 第二行：训练指导和进度报告 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="20">
                    <Button x:Name="TrainingGuideBtn" 
                            Style="{StaticResource ImageButtonStyle}"
                            Click="NavigateToPage">
                        <StackPanel>
                            <Image Source="/WpfApp2;component/image/training_icon.png" 
                                   Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="语言训练指导" Style="{StaticResource ButtonTitleStyle}"/>
                            <TextBlock Text="专业的语言训练方法" Style="{StaticResource ButtonDescriptionStyle}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Margin="20">
                    <Button x:Name="ProgressReportBtn" 
                            Style="{StaticResource ImageButtonStyle}"
                            Click="NavigateToPage">
                        <StackPanel>
                            <Image Source="/WpfApp2;component/image/user.png" 
                                   Width="100" Height="100" Stretch="Uniform"/>
                            <TextBlock Text="档案管理" Style="{StaticResource ButtonTitleStyle}"/>
                            <TextBlock Text="查看人员相关档案信息" Style="{StaticResource ButtonDescriptionStyle}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>