<Page x:Class="WpfApp2.page.MyUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:WpfApp2.page"
      Title="用户模块"
      Background="#FFF5F5F5">

    <Page.Resources>

        <!-- 操作按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF1A73E8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0d47a1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModalOverlayStyle" TargetType="Border">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>

        <!-- 弹窗容器样式 -->
        <Style x:Key="ModalDialogStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Width" Value="500"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 弹窗标题样式 -->
        <Style x:Key="ModalTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF1A73E8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- 表单标签样式 -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <!-- 表单输入框样式 -->
        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="#FAFAFA"/>
        </Style>

        <!-- 表单下拉框样式 -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="#FAFAFA"/>
        </Style>

        <!-- 弹窗按钮样式 -->
        <Style x:Key="ModalButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style x:Key="TitileText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#333333" 
                    Direction="320" 
                    ShadowDepth="3" 
                    BlurRadius="5" 
                    Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFD98B00" Offset="0"/>
                        <GradientStop Color="#FFB25C" Offset="0.5"/>
                        <GradientStop Color="#FF8B00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF1A73E8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 数据行文本样式 -->
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>


        <!-- 数据行样式 -->
        <Style x:Key="DataRowStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <!-- 交替行样式 -->
        <Style x:Key="AlternatingRowStyle" TargetType="Border" BasedOn="{StaticResource DataRowStyle}">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid >
        <Image Source="/WpfApp2;component/image/background.jpg" Stretch="UniformToFill" Opacity="0.3"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <Button  Grid.Column="0" VerticalAlignment="Center"  Margin="0,0,15,0" Click="Back_Click"  BorderThickness="0"  Padding="10">
                    <Image Source="/WpfApp2;component/image/return.png" Width="150" Height="100" Stretch="Uniform"/>
                </Button>
                <Border Grid.Column="1"  CornerRadius="20" Padding="10">
                    <TextBlock Text="档  案  管  理" FontSize="80" 
                           FontFamily="Microsoft YaHei"  Foreground="#FFD98B00"
                           Style="{StaticResource TitileText}"
                    HorizontalAlignment="Center"/>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Margin="20">
                <Border Background="White" CornerRadius="8" Padding="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 标题 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 表头 -->
                            <RowDefinition Height="*"/>
                            <!-- 数据行 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 底部 -->
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <Border Grid.Row="0" Background="#F5F5F5" Padding="15,12" 
                            BorderThickness="0,0,0,1" BorderBrush="#E0E0E0"
                            CornerRadius="8,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 标题文字 -->
                                <TextBlock Grid.Column="0" 
                                   Text="用户信息管理" 
                                   FontSize="30" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1A73E8"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                                <!-- 新增按钮 -->
                                <Button Grid.Column="1"
                                    Content="➕ 新增用户" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Click="AddUser_Click"
                                    Padding="15,8"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    Margin="0,0,10,0"/>
                             </Grid>
                        </Border>

                        <!-- 表头 -->
                        <Border Grid.Row="1" Background="#FAFAFA" Padding="10,8" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <!-- 用户编号 -->
                                    <ColumnDefinition Width="1.5*"/>
                                    <!-- 姓名 -->
                                    <ColumnDefinition Width="0.8*"/>
                                    <!-- 性别 -->
                                    <ColumnDefinition Width="1.2*"/>
                                    <!-- 生日 -->
                                    <ColumnDefinition Width="1.5*"/>
                                    <!-- 电话号码 -->
                                    <ColumnDefinition Width="1.2*"/>
                                    <!-- 操作 -->
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="用户编号" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="1" Text="姓名" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="2" Text="性别" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="3" Text="生日" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="4" Text="电话号码" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="5" Text="操作" Style="{StaticResource HeaderTextStyle}"/>
                            </Grid>
                        </Border>

                        <!-- 数据行 -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="UsersItemsControl" ItemsSource="{Binding Users}"
                                  AlternationCount="2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource AlternatingRowStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <!-- 用户编号 -->
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <!-- 姓名 -->
                                                    <ColumnDefinition Width="0.8*"/>
                                                    <!-- 性别 -->
                                                    <ColumnDefinition Width="1.2*"/>
                                                    <!-- 生日 -->
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <!-- 电话号码 -->
                                                    <ColumnDefinition Width="1.2*"/>
                                                    <!-- 操作 -->
                                                </Grid.ColumnDefinitions>

                                                <!-- 用户编号 -->
                                                <TextBlock Grid.Column="0" 
                                                   Text="{Binding UserId}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 姓名 -->
                                                <TextBlock Grid.Column="1" 
                                                   Text="{Binding Name}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 性别 -->
                                                <TextBlock Grid.Column="2" 
                                                   Text="{Binding Gender}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 生日 -->
                                                <TextBlock Grid.Column="3" 
                                                   Text="{Binding Birthday, StringFormat=yyyy-MM-dd}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 电话号码 -->
                                                <TextBlock Grid.Column="4" 
                                                   Text="{Binding PhoneNumber}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 操作按钮 -->
                                                <StackPanel Grid.Column="5" 
                                                    Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                                    <Button Content="删除" 
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Click="DeleteUser_Click"
                                                    Tag="{Binding UserId}"/>
                                                    
                                                    <Button Content="修改" 
                                                    Background="#FFD98B00"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Click="EditUser_Click"
                                                    Tag="{Binding UserId}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Border x:Name="EditModalOverlay" Style="{StaticResource ModalOverlayStyle}">
            <Border Style="{StaticResource ModalDialogStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 弹窗标题 -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="20,15" 
                    CornerRadius="8,8,0,0" BorderThickness="0,0,0,1" 
                    BorderBrush="#E0E0E0">
                        <TextBlock x:Name="EditModalTitle" Text="修改用户信息" 
                           Style="{StaticResource ModalTitleStyle}"/>
                    </Border>

                    <!-- 表单内容 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                        <StackPanel>
                            <!-- 用户ID（只读） -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="用户编号：" Style="{StaticResource FormLabelStyle}"/>
                                <TextBlock x:Name="EditUserIdText" Grid.Column="1" 
                                   FontSize="14" Foreground="#666666"
                                   VerticalAlignment="Center"/>
                            </Grid>

                            <!-- 姓名 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="姓名：" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="EditNameTextBox" Grid.Column="1" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                            </Grid>

                            <!-- 性别 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="性别：" Style="{StaticResource FormLabelStyle}"/>
                                <ComboBox x:Name="EditGenderComboBox" Grid.Column="1" 
                                  Style="{StaticResource FormComboBoxStyle}">
                                    <ComboBoxItem Content="男" IsSelected="True"/>
                                    <ComboBoxItem Content="女"/>
                                </ComboBox>
                            </Grid>

                            <!-- 生日 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="生日：" Style="{StaticResource FormLabelStyle}"/>
                                <DatePicker x:Name="EditBirthdayDatePicker" Grid.Column="1" 
                                    FontSize="14" Padding="8"
                                    BorderThickness="1" BorderBrush="#E0E0E0"/>
                            </Grid>

                            <!-- 电话号码 -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="电话号码：" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="EditPhoneTextBox" Grid.Column="1" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 按钮区域 -->
                    <Border Grid.Row="2" Background="#F8F9FA" Padding="15" 
                    CornerRadius="0,0,8,8" BorderThickness="0,1,0,0" 
                    BorderBrush="#E0E0E0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Button x:Name="SaveEditButton" Content="保存" 
                            Style="{StaticResource ModalButtonStyle}"
                            Click="SaveModal_Click"/>

                            <Button Content="关闭" 
                            Background="#6C757D"
                            Style="{StaticResource ModalButtonStyle}"
                            Click="CloseEditModal_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Border>

        <!-- 新增用户弹窗 -->
        <Border x:Name="AddModalOverlay" Style="{StaticResource ModalOverlayStyle}">
            <Border Style="{StaticResource ModalDialogStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 弹窗标题 -->
                    <Border Grid.Row="0" Background="#F8F9FA" Padding="20,15" 
                    CornerRadius="8,8,0,0" BorderThickness="0,0,0,1" 
                    BorderBrush="#E0E0E0">
                        <TextBlock Text="新增用户" 
                           Style="{StaticResource ModalTitleStyle}"/>
                    </Border>

                    <!-- 表单内容 -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                        <StackPanel>
                            <!-- 姓名 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="姓名：" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="AddNameTextBox" Grid.Column="1" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                            </Grid>

                            <!-- 性别 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="性别：" Style="{StaticResource FormLabelStyle}"/>
                                <ComboBox x:Name="AddGenderComboBox" Grid.Column="1" 
                                  Style="{StaticResource FormComboBoxStyle}">
                                    <ComboBoxItem Content="男" IsSelected="True"/>
                                    <ComboBoxItem Content="女"/>
                                </ComboBox>
                            </Grid>

                            <!-- 生日 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="生日：" Style="{StaticResource FormLabelStyle}"/>
                                <DatePicker x:Name="AddBirthdayDatePicker" Grid.Column="1" 
                                    FontSize="14" Padding="8"
                                    BorderThickness="1" BorderBrush="#E0E0E0"
                                    SelectedDate="{x:Static sys:DateTime.Now}"/>
                            </Grid>

                            <!-- 电话号码 -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="电话号码：" Style="{StaticResource FormLabelStyle}"/>
                                <TextBox x:Name="AddPhoneTextBox" Grid.Column="1" 
                                 Style="{StaticResource FormTextBoxStyle}"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- 按钮区域 -->
                    <Border Grid.Row="2" Background="#F8F9FA" Padding="15" 
                    CornerRadius="0,0,8,8" BorderThickness="0,1,0,0" 
                    BorderBrush="#E0E0E0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Button Content="保存" 
                            Style="{StaticResource ModalButtonStyle}"
                            Click="SaveAddButton_Click"/>

                            <Button Content="关闭" 
                            Background="#6C757D"
                            Style="{StaticResource ModalButtonStyle}"
                            Click="CloseAddModal_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
