<Page x:Class="WpfApp2.page.MyUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.page"
      Title="用户模块"
      Background="#FFF5F5F5">

    <Page.Resources>
        <Style x:Key="TitileText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#333333" 
                    Direction="320" 
                    ShadowDepth="3" 
                    BlurRadius="5" 
                    Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFD98B00" Offset="0"/>
                        <GradientStop Color="#FFB25C" Offset="0.5"/>
                        <GradientStop Color="#FF8B00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF1A73E8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 数据行文本样式 -->
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>

        <!-- 操作按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF1A73E8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0d47a1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 数据行样式 -->
        <Style x:Key="DataRowStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <!-- 交替行样式 -->
        <Style x:Key="AlternatingRowStyle" TargetType="Border" BasedOn="{StaticResource DataRowStyle}">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid >
        <Image Source="/WpfApp2;component/image/background.jpg" Stretch="UniformToFill" Opacity="0.3"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <Button  Grid.Column="0" VerticalAlignment="Center"  Margin="0,0,15,0" Click="Back_Click"  BorderThickness="0"  Padding="10">
                    <Image Source="/WpfApp2;component/image/return.png" Width="150" Height="100" Stretch="Uniform"/>
                </Button>
                <Border Grid.Column="1"  CornerRadius="20" Padding="10">
                    <TextBlock Text="档  案  管  理" FontSize="80" 
                           FontFamily="Microsoft YaHei"  Foreground="#FFD98B00"
                           Style="{StaticResource TitileText}"
                    HorizontalAlignment="Center"/>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Margin="20">
                <Border Background="White" CornerRadius="8" Padding="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- 标题 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 表头 -->
                            <RowDefinition Height="*"/>
                            <!-- 数据行 -->
                            <RowDefinition Height="Auto"/>
                            <!-- 底部 -->
                        </Grid.RowDefinitions>

                        <!-- 标题 -->
                        <Border Grid.Row="0" Background="#F5F5F5" Padding="15,12" 
                        BorderThickness="0,0,0,1" BorderBrush="#E0E0E0"
                        CornerRadius="8,8,0,0">
                            <TextBlock Text="用户信息管理" 
                               FontSize="30" 
                               FontWeight="Bold" 
                               Foreground="#FF1A73E8"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- 表头 -->
                        <Border Grid.Row="1" Background="#FAFAFA" Padding="10,8" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <!-- 用户编号 -->
                                    <ColumnDefinition Width="1.5*"/>
                                    <!-- 姓名 -->
                                    <ColumnDefinition Width="0.8*"/>
                                    <!-- 性别 -->
                                    <ColumnDefinition Width="1.2*"/>
                                    <!-- 生日 -->
                                    <ColumnDefinition Width="1.5*"/>
                                    <!-- 电话号码 -->
                                    <ColumnDefinition Width="1.2*"/>
                                    <!-- 操作 -->
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="用户编号" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="1" Text="姓名" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="2" Text="性别" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="3" Text="生日" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="4" Text="电话号码" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Column="5" Text="操作" Style="{StaticResource HeaderTextStyle}"/>
                            </Grid>
                        </Border>

                        <!-- 数据行 -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="UsersItemsControl" ItemsSource="{Binding Users}"
                                  AlternationCount="2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource AlternatingRowStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <!-- 用户编号 -->
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <!-- 姓名 -->
                                                    <ColumnDefinition Width="0.8*"/>
                                                    <!-- 性别 -->
                                                    <ColumnDefinition Width="1.2*"/>
                                                    <!-- 生日 -->
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <!-- 电话号码 -->
                                                    <ColumnDefinition Width="1.2*"/>
                                                    <!-- 操作 -->
                                                </Grid.ColumnDefinitions>

                                                <!-- 用户编号 -->
                                                <TextBlock Grid.Column="0" 
                                                   Text="{Binding UserId}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 姓名 -->
                                                <TextBlock Grid.Column="1" 
                                                   Text="{Binding Name}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 性别 -->
                                                <TextBlock Grid.Column="2" 
                                                   Text="{Binding Gender}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 生日 -->
                                                <TextBlock Grid.Column="3" 
                                                   Text="{Binding Birthday, StringFormat=yyyy-MM-dd}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 电话号码 -->
                                                <TextBlock Grid.Column="4" 
                                                   Text="{Binding PhoneNumber}" 
                                                   Style="{StaticResource DataTextStyle}"/>

                                                <!-- 操作按钮 -->
                                                <StackPanel Grid.Column="5" 
                                                    Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                                    <Button Content="删除" 
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Click="ViewReport_Click"
                                                    Tag="{Binding UserId}"/>
                                                    <Button Content="修改" 
                                                    Background="#FFD98B00"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Click="EditUser_Click"
                                                    Tag="{Binding UserId}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- 底部状态栏 -->
                        <Border Grid.Row="3" 
                        Background="#FAFAFA" 
                        Padding="15,10" 
                        BorderThickness="1,0,0,0" 
                        BorderBrush="#E0E0E0"
                        CornerRadius="0,0,8,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                   Text="{Binding StatusMessage}" 
                                   FontSize="12" 
                                   Foreground="#666666" 
                                   VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="添加用户" 
                                    Background="#34A853"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Click="AddUser_Click"
                                    Padding="12,6"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
