<Page x:Class="WpfApp2.page.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="语言发展知识" Background="#FFF5F5F5">

    <Page.Resources>
        <!-- 卡片样式 -->
        <Style x:Key="ContentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 标题样式 -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF1A73E8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- 子标题样式 -->
        <Style x:Key="SubTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="0,10,0,8"/>
        </Style>

        <!-- 列表项样式 -->
        <Style x:Key="ListItemStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="Margin" Value="15,4,0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- 时间范围样式 -->
        <Style x:Key="TimeRangeStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFD98B00"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="GradientBlueButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4FC3F7" Offset="0"/>
                        <GradientStop Color="#29B6F6" Offset="0.5"/>
                        <GradientStop Color="#03A9F4" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border Background="LightYellow" CornerRadius="20" Padding="10">
                <TextBlock Text="系统介绍"
                    FontSize="30" FontFamily="Microsoft YaHei" 
                    Foreground="#FFD98B00" FontWeight="Bold"
                    HorizontalAlignment="Center" Margin="0,0,0,0"/>
            </Border>
            
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <!--<Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>-->
                <StackPanel Orientation="Vertical">
                    <Button Content="语言的发展" Padding="20,10" FontSize="18" Style="{StaticResource GradientBlueButton}"/>
                    <Button Content="词汇的发展" Padding="20,10" FontSize="18" Style="{StaticResource GradientBlueButton}"/>
                    <Button Content="词汇语义的发展" Padding="20,10" FontSize="18" Style="{StaticResource GradientBlueButton}"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel MaxWidth="1000" Margin="0,0,0,30">

                <!-- 页面标题 -->
                <Border Style="{StaticResource ContentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="婴幼儿语言发展阶段" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#FF1A73E8"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="全面了解0-12个月婴儿语言发展规律"
                                   FontSize="16"
                                   Foreground="#FF666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- 无缝介绍部分 -->
                <Border Style="{StaticResource ContentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="# 无缝介绍" Style="{StaticResource SectionTitleStyle}"/>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="## 语音的发展" Style="{StaticResource SubTitleStyle}"/>
                            <TextBlock Text="• 词汇的发展" Style="{StaticResource ListItemStyle}" FontWeight="SemiBold"/>

                            <TextBlock Text="21天以内" Style="{StaticResource TimeRangeStyle}"/>
                            <TextBlock Text="21天以内的婴儿会出现类似 [c], [v], [w], [cv] 等无意识语音。" 
                                       Style="{StaticResource ListItemStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 词汇语义的发展部分 -->
                <Border Style="{StaticResource ContentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="### 词汇语义的发展" Style="{StaticResource SubTitleStyle}"/>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="• 句子语法的发展" Style="{StaticResource ListItemStyle}" FontWeight="SemiBold"/>

                            <TextBlock Text="21天-5个月" Style="{StaticResource TimeRangeStyle}"/>
                            <TextBlock Text="21天-5个月婴儿出现了 [a], [o], [e], [i], [u], [l], [zh], [ch], [er] 等无初步语音。" 
                                       Style="{StaticResource ListItemStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 比较句的发展部分 -->
                <Border Style="{StaticResource ContentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="### 比较句的发展" Style="{StaticResource SubTitleStyle}"/>

                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="• 给予句的发展" Style="{StaticResource ListItemStyle}" FontWeight="SemiBold"/>

                            <TextBlock Text="6-8个月" Style="{StaticResource TimeRangeStyle}"/>
                            <TextBlock Text="6-8个月婴儿的语音逐渐增多，慢慢出现了：" 
                                       Style="{StaticResource ListItemStyle}"/>

                            <!-- 语音表格 -->
                            <Border Background="#FFF8F9FA" CornerRadius="8" Padding="15" Margin="10,10,10,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 第一行 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="[a-ba-ba-ba]" FontSize="13" Margin="5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="[da-da-da]" FontSize="13" Margin="5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="[na-na-na]" FontSize="13" Margin="5"/>

                                    <!-- 第二行 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="[ba-ba] (爸爸)" FontSize="13" Margin="5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="[ge-get] (哥哥)" FontSize="13" Margin="5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="[ma-ma] (妈妈)" FontSize="13" Margin="5"/>

                                    <!-- 第三行 -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="[a-i] (阿姨)" FontSize="13" Margin="5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="[b] [d] [g]" FontSize="13" Margin="5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="[p] [n] [fong] [eng]" FontSize="13" Margin="5"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 主讲结构句的发展部分 -->
                <Border Style="{StaticResource ContentCardStyle}">
                    <StackPanel>
                        <TextBlock Text="### 主讲结构句的发展" Style="{StaticResource SubTitleStyle}"/>

                        <TextBlock Text="9-12个月" Style="{StaticResource TimeRangeStyle}"/>
                        <TextBlock Text="9-12个月儿童的语言进一步增多，如：" 
                                   Style="{StaticResource ListItemStyle}"/>

                        <!-- 占位内容 -->
                        <Border Background="#FFF8F9FA" CornerRadius="8" Padding="15" Margin="10,10,10,0">
                            <TextBlock Text="更多详细的语言发展内容..." 
                                       FontSize="14" 
                                       Foreground="#FF666666" 
                                       FontStyle="Italic"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- 导航按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="返回主菜单" 
                            Background="#FF1A73E8" 
                            Foreground="White" 
                            Height="40" 
                            Width="120" 
                            FontSize="14"
                            Click="BackToMenu_Click"
                            Style="{StaticResource RoundedButtonStyle}"
                            Margin="0,0,15,0"/>

                    <Button Content="开始评估" 
                            Background="#FF34A853" 
                            Foreground="White" 
                            Height="40" 
                            Width="120" 
                            FontSize="14"
                            Click="StartAssessment_Click"
                            Style="{StaticResource RoundedButtonStyle}"/>
                </StackPanel>
            </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>