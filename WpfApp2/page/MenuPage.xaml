<Page x:Class="WpfApp2.page.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="语言发展知识" Background="#FFF5F5F5"
      x:Name="MainMenuPage">

    <Page.Resources>
        <!-- 卡片样式 -->
        <Style x:Key="ContentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 标题样式 -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF1A73E8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- 子标题样式 -->
        <Style x:Key="SubTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="0,10,0,8"/>
        </Style>

        <!-- 列表项样式 -->
        <Style x:Key="ListItemStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="Margin" Value="15,4,0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- 时间范围样式 -->
        <Style x:Key="TimeRangeStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#FFD98B00"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- 渐变按钮样式 -->
        <Style x:Key="GradientBlueButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4FC3F7" Offset="0"/>
                        <GradientStop Color="#29B6F6" Offset="0.5"/>
                        <GradientStop Color="#03A9F4" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- 选中状态的按钮样式 -->
        <Style x:Key="SelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource GradientBlueButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0288D1" Offset="0"/>
                        <GradientStop Color="#0277BD" Offset="0.5"/>
                        <GradientStop Color="#01579B" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitileText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#333333" 
                            Direction="320" 
                            ShadowDepth="3" 
                            BlurRadius="5" 
                            Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFD98B00" Offset="0"/>
                        <GradientStop Color="#FFB25C" Offset="0.5"/>
                        <GradientStop Color="#FF8B00" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

